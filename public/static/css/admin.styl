.wrapper
    min-height 100vh
    overflow hidden
    .col1
        float left 
        position relative
        z-index 999
        width 17%
    .col2
        float left
        width 83%


.page 
    padding-top 16px
    padding-bottom 16px
    .breadcrumb 
        background-color #fff
        box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.10) !important
        .breadcrumb-item 
            a 
                &:hover
                      text-decoration none

.panel
    background-color #fff
    border-radius 6px
    border-bottom 2px  solid  #1e38f7
    width 100%
    .header
        border-bottom 1px  solid  #e8e8e8
        h2.title 
            display inline-block
            color #19213d
            font-size 1.1em
            padding 12px 16px
        ul 
            display inline-block
            float right  
            margin-right 12px          
            li
                display inline-block
                position relative
                a 
                    color #333
                    display inline-block
                    padding 10px
                    &:hover
                        background-color #f6f6f6
                        text-decoration none
                        color #222
                    i 
                        color #2caaff
                ul 
                    background-color #fff
                    display none
                    float none
                    position absolute
                    right -16px
                    width 160px
                    border 1px solid #f0f0f0
                    li 
                        display inline-block
                        width 100%
                        border-bottom 1px solid #f0f0f0
                        &:last-child
                            border-bottom 0px
                        a 
                            display block 
                            width 100%
                &:hover
                    ul 
                        display block 
    .inside
        padding 16px    
        .nav 
            .nav-link 
                border 1px solid #1e38f7 
                margin-right 8px
                &:hover
                    background-color #1e38f7 
                    color #fff
        .form_search
            display none
            margin-bottom 16px
            .btn 
                width 100%
        .big_count
            display block
            font-size 2em
            text-align center
            width 100%


.opts
    a 
        border-radius 4px
        border 1px solid #f0f0f0
        display inline-block
        padding 8px 12px

.product_gallery
    overflow hidden
    .btn-submit
        display block
        margin-right 1%
        font-size 1.5em
        width 100%
        a
            border 1px dashed #6666 
            border-radius 4px
            color #333 
            display block 
            text-align center
            padding 12px
            width 100%
            &:hover
                background-color #1e38f7
                color #fff
    .tumbs
        overflow hidden
        .tumb
            float left
            margin-top 16px
            position relative
            width 48%
            a 
                background-color rgba(0,0,0, .5)
                border-radius 50%
                display inline-block
                color #fff
                padding 6px 10px
                position absolute
                bottom 8px
                right 8px
                font-size 22px
            img 
                border-radius 4px
                width 100%
            &:nth-child(odd)
                margin-right 4%
.page_user
    .mini_profile
        .avatar
            display block
            margin 0px
            border-radius 50%
            width 150px
        .info
            background-color #fff
            span 
                display block
                width 100%
            span.title
                font-weight bold
                margin-top 16px
        .btn
            margin-top 16px
            width 100%

