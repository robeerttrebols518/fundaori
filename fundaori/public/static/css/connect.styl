body
    background color #f6f6f6
    margin 0px
.mtop16
    margin-top 16px

.box 
    background-color #fff
    border-radius  8px
    border 1px solid #d6d6d6
    position absolute
    width 400px
    .btn-success
        width 100%
        border 0px
        background-color #3004ee
    .form-control
        &:focus
        &:active
            outline none
    .inside
        padding 16px
    .header
        border-radius  8px 8px 0px 0px
        background-color #1e38f7
        padding 16px
        a  
            img 
                display block                
                margin 0px auto 
                width 30%
    
    .footer
        text-align center
        a
            display inline-block
            &:last-child
                margin-left 24px


.box_login
    left calc(50% - 250px)
    top calc(50% - 200px)

.box_register
    left calc(50% - 250px)
    top calc(50% - 350px)

